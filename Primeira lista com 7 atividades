problema 5 pronto

programa {
  funcao inicio() {
  
  real  nota1, nota2, nota3, nota4, soma 
    real media 


   escreva("Digite a nota 1: ")
   leia(nota1)

   escreva("Digite a nota 2: ")
   leia(nota2)

   escreva("Digite a nota 3: ")
   leia(nota3)

   escreva("Digite a nota 4: ")
   leia(nota4)

   soma = nota1 + nota2 + nota3 + nota4
   media = soma / 4

   escreva("A soma das notas é: ", soma )
   escreva("A média das notas é: ", media) 
  }
}__________________________


problema 6


 programa {
  funcao inicio() {
  
  
   real fahrenheit, celsius:


   escreva("Digite a temperatura em Fahrenheit: ")
   leia(fahrenheit)

   celsius = 5 * ((fahrenheit - 32) / 9)

   escreva("A temperatura em Celsius é: ", celsius, "°C")

  }
}_________________________
Problema 7


Algoritmo

var metrosQuadrados, litrosTinta, latasTinta: inteiro
var precoTotal: real

Escreva("Digite o tamanho em metros quadrados da área a ser pintada:")
Leia(metrosQuadrados)

litrosTinta = arredondarAcima(metrosQuadrados / 3.0)
latasTinta = arredondarAcima(litrosTinta / 18.0)
precoTotal = latasTinta * 80.0

Escreva("Você precisará comprar ", latasTinta, " latas de tinta, com um total de R$", precoTotal, ".")

função arredondarAcima(numero: real) retorna inteiro
se numero inteiro então
retorna numero
senão
retorna inteiro(numero + 1)
fim se
fim função

}
